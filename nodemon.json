{
  "delay": "1000",
  "verbose": true,
  "ignore": [
    ".git",
    "node_modules",
    "public/_dist"
  ],
  "watch": [
    "package.json",
    "routes/**/*.js",
    "methods/**/*.js",
    "plugins/**/*.js",
    "helpers/**/*.js",
    "views/**/*.njk",
    "conf/*.yaml"
  ],
  "ext": "js yaml njk"
}
